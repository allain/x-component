{
  "name": "x-component",
  "version": "0.1.0",
  "description": "Adds the ability to define components using Alpinejs.",
  "main": "x-comopnent.mjs",
  "type": "module",
  "scripts": {
    "build": "npm run build:esm && npm run build:js",
    "build:esm": "npx esbuild ./src/x-component.mjs --bundle --format=esm > ./dist/x-component.mjs",
    "build:js": "npx esbuild ./src/x-component.mjs --bundle --format=iife > ./dist/x-component.js",
    "test": "web-test-runner './test/*.test.mjs' --node-resolve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allain/x-component.git"
  },
  "keywords": [
    "Alpinejs",
    "web",
    "webcomponents"
  ],
  "author": "Allain Lalonde <allain.lalonde@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/allain/x-component/issues"
  },
  "homepage": "https://github.com/allain/x-component#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@web/test-runner": "^0.13.22",
    "alpinejs": "^3.5.1"
  }
}